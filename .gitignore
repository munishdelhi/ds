# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp

# Ignoring IDE configuration files and directories
/.idea
/.project

# Ignore Coverage
/coverage

# Ignore Vagrant related file/directories
/.vagrant
/.vagrant_*
/vagrant_support/external_resources
**/*.box

# Ignoring all .DS_Store (Mac) directories
**/.DS_Store

# Ignoring all .swp files
**/*.swp

# Ignoring tags file (CTAGS)
/tags

# Ignoring directories within /public
/public/*

# Ignore rnd.rb, as it is being used only for random R&D purpose
/rnd.rb

/Gemfile.lock
